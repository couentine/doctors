<header id="bl-navbar" class="<%= (content_for?(:hide_header)) ? '' : 'with-background' %>">
  
  <% if user_signed_in? %>

    <ul class="nav left-nav">
      <li>
        <a href="/" title="Back to App Home" data-toggle="tooltip" data-placement="bottom">
          <i class="fa fa-home"></i>
        </a>
      </li>
    </ul>
    <ul class="nav right-nav">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" id="dropdown-header-currentuser" role="button" data-toggle="dropdown" data-target="#">
          <%= image_tag current_user.avatar_image_url(:small), class: 'img-circle' %>
          <span id="header-currentuser-name"><%= current_user.name %></span>
          <i class="fa fa-caret-down"></i>
        </a>
        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdown-header-currentuser">
          <li class="inner">
            <a href="<%= url_for(current_user) %>">
              <i class="fa fa-shield"></i> Badge profile
            </a>
          </li>
          
          <li class="divider inner"></li>
          
          <li class="inner">
            <a href="<%= edit_user_registration_path %>">
              <i class="fa fa-user"></i> Badge List account
            </a>
          </li>
          <li class="inner">
            <a href="<%= edit_user_registration_path %>#upload-image">
              <i class="fa fa-picture-o"></i> Update profile image
            </a>
          </li> 
          <% if current_user.admin? %>
            <li class="inner">
              <a href="/a">
                <i class="fa fa-cogs"></i> Admin tools
              </a>
            </li>
          <% end %>
          
          <li class="divider inner"></li>
          
          <li class="inner">
            <%= link_to "<i class='fa fa-remove'></i> Sign out".html_safe, 
              destroy_user_session_path, :method => :delete %>
          </li>
        </ul>
      </li>
    </ul>

  <% else %>

    <ul class="nav left-nav">
      <li>
        <%= link_to image_tag('badge-list-shield.png') + ' Badge List', '/', class: "brand" %>

      </li>
    </ul>
    <ul class="nav right-nav">
      <li>
        <%= link_to "<i class='fa fa-sign-in'></i> Sign in or sign up".html_safe, 
          new_user_session_path %>
      </li>
    </ul>

  <% end %>
</div>
  
</header>