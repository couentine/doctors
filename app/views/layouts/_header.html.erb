<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    
    

    <ul class="nav header-left">
      <li>
        <%= link_to image_tag('badge-list-shield.png'), root_path, id: "logo", class: "brand", 
          title: "Badge List Home" %>
          <span class="divider"><i class="fa fa-caret-right"></i></span>
      </li>
      <% if user_signed_in? %>
        <li>
          <a href="/w" class="smaller">
            <i class="fa fa-globe" title="Badge List Website" data-toggle="tooltip" 
              data-placement="bottom"></i>
            <span class="divider"><i class="fa fa-caret-right"></i></span>
          </a>
        </li>
      <% end %>
      <li>
        <a href="http://badgelist.com/help/docs" class="smaller">
          <i class="fa fa-question" title="Badge List Help Docs" data-toggle="tooltip" 
            data-placement="bottom"></i>
        </a>
      </li>
    </ul>
    
    <!-- Everything you want hidden at 940px or less, place within here -->
    <% if user_signed_in? %>
      <ul class="nav pull-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" id="dropdown-header-currentuser" role="button" 
              data-toggle="dropdown" data-target="#">
            <%= gravatar_for current_user, :size => 23, :class => 'img-circle' %>
            <span id="header-currentuser-name"><%= current_user.name %></span>
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu" role="menu" aria-labelledby="dropdown-header-currentuser">
            <li>
              <a href="<%= url_for(current_user) %>">
                <i class="fa fa-shield"></i> Badge profile
              </a>
            </li>
            
            <li class="divider"></li>
            
            <li>
              <a href="<%= edit_user_registration_path %>">
                <i class="fa fa-user"></i> Badge List account
              </a>
            </li>
            <li>
              <a href="https://en.gravatar.com/connect/?source=_signup" target="_blank" data-toggle=
                  "tooltip" data-placement="bottom" 
                  title="Badge List uses Gravatar to display your profile picture.">
                <i class="fa fa-picture-o"></i> Change photo
              </a>
            </li> 
            <% if current_user.admin? %>
              <li>
                <a href="/a">
                  <i class="fa fa-cogs"></i> Admin tools
                </a>
              </li>
            <% end %>
            
            <li class="divider"></li>
            
            <li>
              <%= link_to "<i class='fa fa-remove'></i> Sign out".html_safe, 
                destroy_user_session_path, :method => :delete %>
            </li>
          </ul>
        </li>
      </ul>
    <% else %>
      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <nav class="nav-collapse collapse">
        <ul class="nav pull-right">
            <li><%= link_to 'Sign up', new_user_registration_path, id: "header-sign-up-link" %></li>
            <li class="divider-vertical"></li>
            <li><%= link_to 'Sign in', new_user_session_path %></li>
        </ul>
      </nav>
    <% end %>
  </div>

  <% if content_for? :show_subheader %>
    <div id="subheader">
      <% if content_for?(:subheader_links) || content_for?(:subheader_image) %>
        <div class="subheader-breadcrumbs">
          <% 
            if content_for?(:subheader_image_class)
              the_class = yield(:subheader_image_class)  
            else
              the_class = ''
            end 
          %>
          <%= if content_for?(:subheader_image)
                image_tag yield(:subheader_image), class: the_class
                end %>
          <ul class="breadcrumb">
            <%= yield :subheader_links if content_for?(:subheader_links) %>  
          </ul>
        </div>
      <% end %>
            
      <% if content_for?(:subheader_actions) %>
        <div class="subheader-actions">
          <ul class="subheader-actions">
            <%= yield :subheader_actions %>
          </ul>
        </div>
      <% end %>
    </div>
  <% end %>
  
</header>