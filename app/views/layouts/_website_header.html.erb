<header id="bl-navbar" class="<%= (content_for?(:hide_header)) ? '' : 'with-background' %>">
  
  <% if user_signed_in? %>

    <ul class="nav left-nav">
      <li>
        <a href="/" title="Back to App Home" data-toggle="tooltip" data-placement="bottom">
          <i class="fa fa-home"></i>
        </a>
      </li>
    </ul>
    <ul class="nav right-nav">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" id="dropdown-header-currentuser" role="button" data-toggle="dropdown" data-target="#">
          <%= gravatar_for current_user, :size => 23, :class => 'img-circle' %>
          <span id="header-currentuser-name"><%= current_user.name %></span>
          <i class="fa fa-caret-down"></i>
        </a>
        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdown-header-currentuser">
          <li class="inner">
            <a href="<%= url_for(current_user) %>"><i class="fa fa-user"></i> 
            Your profile</a>
          </li>
          <% if current_user.admin? %>
            <li class="inner"><a href="/a"><i class="fa fa-cogs"></i> Admin tools</a></li>
          <% end %>
          <li class="divider"></li>
          <li class="inner"><%= link_to "<i class='fa fa-remove'></i> Sign out".html_safe, destroy_user_session_path, :method => :delete %></li>
        </ul>
      </li>
    </ul>

  <% else %>

    <ul class="nav left-nav">
      <li>
        <%= link_to image_tag('badge-list-icon-50.png') + ' Badge List', '/', class: "brand" %>

      </li>
    </ul>
    <ul class="nav right-nav">
      <li>
        <%= link_to "<i class='fa fa-sign-in'></i> Sign in".html_safe, new_user_session_path %>
      </li>
    </ul>

  <% end %>
</div>
  
</header>