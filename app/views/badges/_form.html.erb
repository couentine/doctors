<%= simple_form_for(@badge, html: {class: 'form-horizontal'}) do |f| %>
  <%= f.input :name, label: 'Badge Name', input_html: {class: 'input-xlarge'} %>
  <%= f.input :image_url, label: 'Badge Image URL', input_html: {class: 'input-xxlarge'} %>
  <%= f.input :summary, label: 'Brief Summary', as: :text, input_html: {class: 'input-xlarge', :rows => '3'} %>
  <%= f.input :description, label: 'Full Description', as: :text, input_html: {class: 'input-xxlarge', :rows => '10'} %>
  <div class="controls">
    <%= f.button :submit, class: 'btn btn-large btn-primary' %>
    <%= 
      if @badge.id.blank? 
        link_to "Cancel", badges_path, class: "btn btn-large"
      else 
        link_to "Cancel", @badge, class: "btn btn-large"
      end
    %>
  </div>
<% end %>
