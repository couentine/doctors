<% provide(:title, 'Change password') %>

<div class="page-header">
  <h1>Change your password</h1>
</div>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs bl-form-large bl-form-no-labels">
    <%= f.input :password, :required => true, :autofocus => true, :placeholder => 'New password', :input_html => { :class => 'input-xlarge' } %>
    <%= f.input :password_confirmation, :required => true, :placeholder => 'Confirm your new password', :input_html => { :class => 'input-xlarge' } %>
  </div>

  <div class="controls">
    <%= f.button :submit, "Change my password", :class => 'btn-large btn-primary' %>
  </div>
<% end %>
