<div class="dropdown">
  <a class="dropdown-toggle" id="dropdown-signin-trouble" role="button" data-toggle="dropdown" data-target="#" href="#">
    Trouble signing in?
    <b class="caret"></b>
  </a>
  <ul class="dropdown-menu" role="menu" aria-labelledby="dropdown-signin-trouble">
    
    <!--
    <%- if controller_name != 'sessions' %>
      <li><%= link_to "Sign in", new_session_path(resource_name), :tabindex => '-1' %></li>
    <% end -%>
    -->

    <!--
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <li><%= link_to "Sign up", new_registration_path(resource_name), :tabindex => '-1' %></li>
    <% end -%>
    -->

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <li><%= link_to "Forgot your password?", new_password_path(resource_name), :tabindex => '-1' %></li>
    <% end -%>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <li><%= link_to "Didn't receive confirmation link?", new_confirmation_path(resource_name), :tabindex => '-1' %></li>
    <% end -%>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <li><%= link_to "Didn't receive unlock link?", new_unlock_path(resource_name), :tabindex => '-1' %></li>
    <% end -%>

    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <li><%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :tabindex => '-1' %></li>
      <% end -%>
    <% end -%>
  </ul>

</div>