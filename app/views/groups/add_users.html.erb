<% 
  provide(:title, "Add #{@type.to_s.capitalize.pluralize} - #{@group.name}") 
  provide(:show_subheader, true)
  provide(:subheader_image, group_image_url_for(@group)) 
%>

<% content_for :subheader_links do %>
  <li>
    <%= link_to @group.url, group_path(@group) %>
    <span class="divider">/</span>
  </li>
  <li class="active">Add New Admins</li>
<% end %>

<div class="row">
  <div class="bl-form bl-form-members span10 offset1">
    
    <div class="form-header">
      <h1>Add new <%= @type.to_s.pluralize %></h1>
      <div class="form-image" 
           style="background-image: url('<%= image_path 'group-new-medium.png' %>')">
        &nbsp;
      </div>
    </div>

    <%= form_tag(@form_path, method: :post, id: "group-add-users-form", class: 'form-horizontal') do %>

      <div class="form-body">
        <div class="control-group">
          <%= label_tag :emails, "New #{@type.to_s.capitalize} Emails", class: "control-label" %>
          <div class="controls">
            <%= text_area_tag :emails, params[:emails], size: "150x4", autofocus: true,
                placeholder: 'josh.cassada@nasa.gov, "Jessica U. Meir, Ph.D." <j.meir@nasa.gov>, "Anne McClain" <anne.mcclain@nasa.gov>',
                class: "span6" %>
            <br/>
            <%= check_box_tag :notify_by_email, "1", true %>
            <%= label_tag :notify_by_email, "Notify new #{@type.to_s.pluralize} by email",
                class: "notify-by-email"%>
          </div>
        </div>
      </div>
      
      <div class="form-footer">
        <%= button_tag "Add new #{@type.to_s.pluralize}", type: 'submit', class: 'btn btn-primary' %>
        <%= link_to 'Cancel', @group, class: 'btn' %> 
      </div>

    <% end %>

  </div>
</div>