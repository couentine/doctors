<% 
  provide(:title, "Pricing")
  provide(:body_classes, "pricing-page")

  if user_signed_in? 
    link_path = new_group_path
  else
    link_path = new_user_registration_path
  end
%>

<div class="row-fluid pricing-page-row page-banner-row">
  <div class="span6 offset3">
    <h1>Badge List Pricing</h1>
    <span class="tag-line">
      (<span class="term" data-term="open-groups">Open groups</span> 
      are free.)
    </span>
  </div>
</div>

<div class="row-fluid pricing-page-row section-banner-row">
  <div class="span6 offset3">
    <h2>Closed Groups</h2>
    <span class="tag-line">
      Include control over 
      <span class="term" data-term="privacy-controls">privacy</span>
      and <span class="term" data-term="membership-controls">membership</span>.<br>
      All groups include unlimited badges and members and 
      <span class="term" data-term="lifetime-hosting">free lifetime hosting</span>.
    </span>
  </div>
</div>

<!-- === TAB BAR === -->

<div class="row-fluid pricing-page-row">
  <div class="span8 offset2">

    <ul class="nav nav-tabs" id="tab-bar">
      <li class="active"><a href="#standard">Standard Pricing</a></li>
      <li><a href="#k12">K12 Pricing</a></li>
    </ul>

  </div>
</div>

<div class="row-fluid pricing-page-row plan-container">
  <div class="span12">
    <div class="tab-content">

      <!-- === STANDARD PRICING === -->
        
      <div class="tab-pane fade in active" id="standard">

        <div class="row-fluid pricing-page-row section-banner-row">
          <div class="span6 offset3">
            <span class="tag-line">
              <i class="fa fa-hand-o-right"></i>
              You can change or cancel your plan at any time. Cancel within the first 2 weeks
              and you won't be charged anything.
            </span>
          </div>
        </div>

        <div class="row-fluid pricing-page-row plan-list-row">

          <!-- === SOLO PLAN === -->

          <div class="span4 plan-col solo">
            <div class="inner-col">
              <div class="title">
                <i class="fa fa-user"></i><br>Solo
              </div>
              <div class="price">
                <span class="currency-symbol">$</span>
                <span class="amount">5</span>
                <span class="suffix">/ month</span>
              </div>
              <div class="feature-list">
                <ul>
                  <li>
                    1 <span class="term" data-term="admin">admin</span>
                    / <span class="term" data-term="one-badge-awarder">badge awarder</span>
                  </li>
                </ul>
              </div>
              <div class="the-button">
                <%= link_to 'Create a group', link_path, class: 'btn btn-large' %>
              </div>
            </div>
          </div>

          <!-- === TEAM PLAN === -->

          <div class="span4 plan-col team">
            <div class="inner-col">
              <div class="title">
                <i class="fa fa-users"></i><br>Team
              </div>
              <div class="price">
                <span class="currency-symbol">$</span>
                <span class="amount">30</span>
                <span class="suffix">/ month</span>
              </div>
              <div class="feature-list">
                <ul>
                  <li>
                    3 <span class="term" data-term="admin">admins</span>
                  </li>
                  <li>
                    Unlimited 
                    <span class="term" data-term="unlimited-badge-awarders">badge awarders</span>
                  </li>
                  <li>
                    <span class="term" data-term="community">Community features</span>
                  </li>
                </ul>
              </div>
              <div class="the-button">
                <%= link_to 'Create a group', link_path, class: 'btn btn-large' %>
              </div>
            </div>
          </div>

          <!-- === ORG PLAN === -->

          <div class="span4 plan-col org">
            <div class="inner-col">
              <div class="title">
                <i class="fa fa-building"></i><br>Org
              </div>
              <div class="price">
                <span class="currency-symbol">$</span>
                <span class="amount">130</span>
                <span class="suffix">/ mo</span>
              </div>
              <div class="feature-list">
                <ul>
                  <li>
                    <em>Everything in Team and...</em>
                  </li>
                  <li>
                    5 <span class="term" data-term="sub-groups">sub-groups</span>
                  </li>
                  <li>
                    <span class="term" data-term="branding">Custom branding</span>
                  </li>
                </ul>
              </div>
              <div class="the-button">
                <%= link_to 'Create a group', link_path, class: 'btn btn-large' %>
              </div>
            </div>
          </div>

        </div> <!-- /.plan-list-row -->

        <div class="row-fluid pricing-page-row plan-list-row">

          <!-- === SUB-GROUP === -->

          <div class="span4 offset8 plan-col extras triple-digit">
            <div class="inner-col">
              <div class="hero-icon"><i class="fa fa-plus-circle"></i></div>
              <div class="price">
                <span class="currency-symbol">$</span>
                <span class="amount">10</span>
                <span class="suffix">per</span>
              </div>
              <div class="title">
                Extra<br>Sub-Group
              </div>
            </div>
          </div>

        </div> <!-- /.plan-list-row -->
        
      </div> <!-- /#standard.tab-pane -->

      <!-- === K12 PRICING === -->

      <div class="tab-pane fade" id="k12">

        <div class="row-fluid pricing-page-row section-banner-row">
          <div class="span6 offset3">
            <span class="tag-line">
              <i class="fa fa-gift"></i>
              Our special K12 pricing is limited to groups where the primary badge earners are 
              K12 students. 2 week free trial included.
            </span>
          </div>
        </div>

        <div class="row-fluid pricing-page-row plan-list-row">

          <!-- === TEACHER PLAN === -->

          <div class="span4 plan-col solo">
            <div class="inner-col">
              <div class="title">
                <i class="fa fa-user"></i><br>Teacher
              </div>
              <div class="price">
                <span class="currency-symbol">$</span>
                <span class="amount">25</span>
                <span class="suffix">/ year</span>
              </div>
              <div class="feature-list">
                <ul>
                  <li>
                    1 <span class="term" data-term="teacher">teacher</span>
                  </li>
                </ul>
              </div>
              <div class="the-button">
                <%= link_to 'Create a group', link_path, class: 'btn btn-large' %>
              </div>
            </div>
          </div>

          <!-- === TEAM PLAN === -->

          <div class="span4 plan-col team">
            <div class="inner-col">
              <div class="title">
                <i class="fa fa-users"></i><br>Team
              </div>
              <div class="price">
                <span class="currency-symbol">$</span>
                <span class="amount">15</span>
                <span class="suffix">/ month</span>
                <span class="footer">
                  ($120 if paid annually)
                </span>
              </div>
              <div class="feature-list">
                <ul>
                  <li>
                    3 <span class="term" data-term="admin">admins</span>
                  </li>
                  <li>
                    Unlimited 
                    <span class="term" data-term="unlimited-badge-awarders">badge awarders</span>
                  </li>
                  <li>
                    <span class="term" data-term="community">Community features</span>
                  </li>
                </ul>
              </div>
              <div class="the-button">
                <%= link_to 'Create a group', link_path, class: 'btn btn-large' %>
              </div>
            </div>
          </div>

          <!-- === SCHOOL PLAN === -->

          <div class="span4 plan-col org">
            <div class="inner-col">
              <div class="title">
                <i class="fa fa-building"></i><br>School
              </div>
              <div class="price">
                <span class="currency-symbol">$</span>
                <span class="amount">65</span>
                <span class="suffix">/ month</span>
                <span class="footer">
                  ($480 if paid annually)
                </span>
              </div>
              <div class="feature-list">
                <ul>
                  <li>
                    <em>Everything in Team and...</em>
                  </li>
                  <li>
                    5 <span class="term" data-term="sub-groups">sub-groups</span>
                  </li>
                  <li>
                    <span class="term" data-term="branding">Custom branding</span>
                  </li>
                </ul>
              </div>
              <div class="the-button">
                <%= link_to 'Create a group', link_path, class: 'btn btn-large' %>
              </div>
            </div>
          </div>
          
        </div> <!-- /.plan-list-row -->

        <div class="row-fluid pricing-page-row plan-list-row">

          <!-- === SUB-PLAN PLAN === -->

          <div class="span4 offset8 plan-col extras">
            <div class="inner-col">
              <div class="hero-icon"><i class="fa fa-plus-circle"></i></div>
              <div class="price">
                <span class="currency-symbol">$</span>
                <span class="amount">5</span>
                <span class="suffix">per</span>
              </div>
              <div class="title">
                Extra<br>Sub-Group
              </div>
            </div>
          </div>

        </div> <!-- /.plan-list-row -->

      </div> <!-- /#k12.tab-pane -->

    </div> <!-- /.tab-content -->
  </div> <!-- /.span -->
</div> <!-- /.row -->

<!-- === PRICING FOOTER === -->

<div class="row-fluid pricing-page-row footer-row">
  <div class="span8 offset2 inner-col">

    <span class="tag-line">
      <i class="fa fa-comments"></i> Have questions? Read the 
      <a href="http://www.badgelist.com/help/docs/Pricing-FAQ" target="_blank">
        Pricing FAQ
      </a>
      or email us at 
      <a href="mailto:solutions@badgelist.com">solutions@badgelist.com</a>.
    </span>

  </div>
</div>

