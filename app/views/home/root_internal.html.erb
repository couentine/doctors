<% 
  provide(:title, "Home")
  provide(:body_class, "home-page")
  provide(:show_subheader, false)
%>

<!-- === PAGE HEADER === -->

<bl-page-header-home>
  <%= image_tag @user.avatar_image_url(:medium), class: 'primary' %>
  <%= link_to "<i class='fa fa-pencil'></i>".html_safe, 
    edit_user_registration_path + '#upload-image', class: 'primary-overlay' %>
  
  <h1><%= @user.name %></h1>
  <div class="subtitle"><%= @user.username %></div>
  
  <bl-button type="raised" link="<%= edit_user_registration_path %>" class="primary">
    Manage Account
  </bl-button>
  
  <% if !@user.confirmed? || @user.pending_reconfirmation? %>
    <!-- === ACCOUNT STATUS WARNING === -->
    
    <bl-label class="primary warning">
      <i class="fa fa-exclamation-triangle"></i>
      Your email address needs verification
    </bl-label>
  <% end %>
  
  <bl-widget-badge-count class="widget" count="<%= @badge_count %>"></bl-widget-badge-count>
</bl-page-header-home>

<!-- === GROUPS === -->

<bl-subheader>
  <h2>Your groups</h2>
  <ul class="buttons">
    <li>
      <bl-button type="flat" target="_blank"
          link="http://blog.badgelist.com/post/134502755750/open-group-list">
        <i class="fa fa-globe"></i> Browse
      </bl-button>
    </li>
    <li>
      <bl-button type="flat" link="<%= new_group_path %>">
        <i class="fa fa-plus"></i> Create
      </bl-button>
    </li>
  </ul>
</bl-subheader>

<bl-grid class="group" groups='<%= @groups_hash.to_json %>' next-page="<%= @groups_next_page %>"
    next-page-url="<%= root_url(format: :json, query: 'group') + '&gp=' %>">
  <div class="placeholder">
    <i class="fa fa-users"></i>
    <div class="message">
      <p><b>You haven't joined any groups yet.</b></p> 
      <p>
        To get started click the browse or create buttons above or check out the 
        <a href="/community">Badge List Community</a>.
      </p>
    </div>
  </div>
</bl-grid>
