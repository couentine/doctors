<%= simple_form_for [@group, @badge, @tag], 
  html: { class: 'form-horizontal' }  do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name_with_caps %>
    <%= f.input :wiki, as: :text %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
