<%= simple_form_for(@tag) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :name_with_caps %>
    <%= f.input :wiki %>
    <%= f.input :wiki_versions %>
    <%= f.input :wiki_sections %>
    <%= f.input :tags %>
    <%= f.input :tags_with_caps %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
