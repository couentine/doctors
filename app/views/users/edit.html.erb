<% provide(:title, "Edit User - #{@user.name}") %>

<!-- === NEW PASSWORD MODAL === -->

<div id="new-password" class="modal hide fade" tabindex="-1" role="dialog" 
  aria-labelledby="mimm-label" aria-hidden="true">
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h3 id="mimm-label">Set new password<h3>
</div>

<div class="modal-body">
  <div class="bl-modal-form">
    <div class="form-body">
      <%= form_tag(user_new_password_path(@user), method: :post, id: 'new-password-form', 
          class: 'form-horizontal') do %>

        <div class="info-block">
          <p>
            Enter a new password below to overwrite the user's existing password.
            Warning: This cannot be undone and no notification will be sent to the user.
            <strong>BE CAREFUL!</strong>
          </p>
        </div>

        <div class="control-group">
          <label class="control-label" for="password">Password</label>
          <div class="controls">
            <input type="text" class="text required" id="password" name="password">
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>

<div class="modal-footer">
  <button class="btn" aria-hidden="true" 
   onclick="$('#new-password-form').submit();">
    Save
  </button>
  <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
</div>
</div>

<div class="row">
  <div class="bl-form bl-form-user span10 offset1">
    <div class="form-header">
      <h1>Edit user</h1>
      <div class="form-image">
        <i class="fa fa-user"></i>
      </div>
    </div>

    <%= render 'form' %>
  </div>
</div>