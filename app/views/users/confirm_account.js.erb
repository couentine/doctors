<% if @success %>
  $("#user-card-<%= @user.username %> .bl-admin-confirm").html(
    "<i class='fa fa-smile-o green'></i>"
  );
<% else %>
  $("#user-card-<%= @user.username %> .bl-admin-confirm").html(
    "<i class='fa fa-frown-o red'></i>"
  );
<% end %>

$("#user-spinner-<%= @user.username %>").fadeOut();