<% 
  provide(:title, "You've been added to #{@group.name}")
  provide(:color, 'light_blue')
  provide(:cta_text, 'View the group')
  provide(:cta_link, group_url(@group))
%>

<% if !@invitation_message.blank? %>
  <%= render partial: "shared/mailers/user_quote", locals: { user: @from_user, 
    message: @invitation_message } %>
<% end %>

<% if @badges.blank? %>
  <p>
    <%= @from_user.name %> has added you as a member to the <%= @group.name %> group in Badge List. 
    You can now browse and join any of the badges in the group.
    To view the group, login to Badge List as normal or click on the link below.
  </p>
<% else %>
  <p>
    <%= @from_user.name %> has added you to <%= pluralize @badges.count, 'badge' %> in Badge List.
    You've also been added as a member of the <%= @group.name %> group. 
    To view the group and begin adding entries to your badge portfolio, 
    login to Badge List as normal or click one of the links below.<br>
    <br>
    <strong>Badges you've been added to:</strong>
  </p>
  
  <%= render partial: "shared/mailers/badge_list", locals: { badges: @badges } %>
<% end %>
