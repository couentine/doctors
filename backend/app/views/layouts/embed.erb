<!DOCTYPE html>
<html>

  <head>
    <% if content_for? :full_title %>
      <title><%= yield(:full_title) %></title>
    <% else %>
      <title><%= full_title(yield(:title)).html_safe %></title>
    <% end %>

    <%= render 'layouts/shared/analytics.html.erb' if Rails.env.production? %>
    <%= render 'layouts/shared/fonts.html.erb' %>
    <%= stylesheet_link_tag "embed", media: "all" %>
    <%= javascript_include_tag "embed" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shared/shim.html.erb' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body class="<%= yield(:body_class) if content_for?(:body_class) %>" >
    <div class="container">
      <%= yield %>
    </div>
  </body>

</html>